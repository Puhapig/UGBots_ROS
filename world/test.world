include "worldinstances.inc"

define mylaser ranger
(
  sensor(
  range [ 0.0 30.0 ] # range
  fov 180       # field of vision
  samples 180   # samples 
  )
  # generic model properties
  color "black"
  size [ 0.05 0.05 0.1 ]
  
)

define carrierRobot position
(
  size [1.8 1.5 1.0]
  drive "diff"
  mylaser(pose [ 0.050 0.000 0 0.000 ])
)

define pickerRobot position
(
  size [1.5 2.5 1.0]
  drive "diff"
  mylaser(pose [ 0.050 0.000 0 0.000 ])
)

define floorplan model
(
  # sombre, sensible, artistic
  color "gray30"

  # most maps will need a bounding box
  boundary 1
  ranger_return 1
  laser_return 1
)

# set the resolution of the underlying raytrace model in meters

resolution 0.02 #resolution of the underline bitmap model in meters. 

interval_sim 100  # simulation timestep in milliseconds. length of each simulation update cycle.

window
( 
  size [ 1000.000 700.000 ] #size of the window in pixels
  scale 30 
)

# load an environment bitmap
floorplan
( 
  name "swarm"
  bitmap "swarm_world.pgm"
  size [50 50 0.5]
  pose [ 0 0 0 0 ]
)

pickerRobot(pose [ -10 -40 0 0 ] name "R0" color "red")
carrierRobot(pose [ -10 -48 0 0 ] name "R1" color "blue")
